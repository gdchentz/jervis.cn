                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url"
                          value="jdbc:mysql://jervis.cn:13306/wdbs"/>
                <property name="username" value="jadb"/>
                <property name="password" value="gd.jervis"/>
            </dataSource>
        </environment>
    </environments>


</configuration>